<body class="bg-dark">
	<div class="container mt-3">
		<div class="row">
			<div class="col-md-6">
				<div class="card ">
					<%= image_tag @article.cover_image.url, class: "c" %>
					<div class="card-body">
						<div>
							<strong>Title:</strong>
							<%= @article.title %>
						</div>
						<div>
							<strong>Text:</strong>
							<%= @article.text %>
						</div>
						<div>
							<strong>ckeditor:</strong>
							<%= @article.template_text.html_safe %>
						</div>

						<%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary"%> |
						<%= link_to 'Back', articles_path, class: "btn btn-primary" %>
					</div>
				</div>
			</div>
			<div class="col-md-6 ">
				<div class="card ">
					<h2 class="card-header">Comments</h2>
					<%= render @article.comments %>

					<h2 class="card-text">Add a Comment</h2>
					<%= render 'comments/form' %>

				</div>
			</div>		
	  </div>
	</div>
</body>    